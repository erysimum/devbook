generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"        // switch to "postgresql" when you move to RDS/Postgres
  url      = env("DATABASE_URL")
}

enum Visibility {
  private
  public
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  notes     Note[]
  projects  Project[]
  createdAt DateTime  @default(now())
  refreshToken String? 
}

model Note {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  tags      String[]      @default([])        // stores ["demo","ideas"]
  user      User      @relation(fields: [userId], references: [id],onDelete: Cascade)
  userId    Int
  createdAt DateTime  @default(now())
}

model Project {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  links       String[]        @default([])    // stores ["https://...","https://..."]
  visibility  Visibility  @default(private)
  user        User        @relation(fields: [userId], references: [id],onDelete: Cascade)
  userId      Int
  createdAt   DateTime    @default(now())
}
